<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout_edit_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/menu_ctg_item_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colotWhiteText"
            android:fontFamily="sans-serif-black"
            android:gravity="center_vertical"
            android:hint="Name Category"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colotWhiteText"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="Color"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintEnd_toStartOf="@+id/spinner_colors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_ctg_item_edittext_name" />

        <Spinner
            android:id="@+id/spinner_colors"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colotWhiteText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_ctg_item_edittext_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="56dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:layout_editor_absoluteX="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/holo_red_light"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/menu_ctg_itm_btn_drop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:text="Delete Category"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font_size" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                app:cardBackgroundColor="@android:color/holo_red_light"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/menu_ctg_itm_btn_deleteall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:text="Delete All Notes "
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font_size" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/menu_ctg_itm_btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font_size" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/menu_ctg_itm_btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font_size" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
